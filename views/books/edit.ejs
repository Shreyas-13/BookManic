<%- include('../partials/header.ejs'); %>

<h1 class="display-4 text-center" id="title">Edit <%= info.title.substring(0 , 20) %>...</h1>
<hr>
<div class="container">
    <div class="row">
        <div class="col-lg-2 col-sm-1"></div>
        <div class="col-lg-8 col-sm-10">
            <form action="/books/<%=info._id %>?_method=PUT " method="POST">
                <div class="form-group">
                <label class="label">Title</label>
                    <input type="text" name="book[title]" value="<%=info.title %>" class="form-control">
                </div>
                <div class="form-group">
                  <label class="label">Author</label>
                    <input type="text" name="book[author]" value="<%=info.author %>" class="form-control">
                </div>
                <div class="form-group">
                    <label class="label">Publisher</label>
                    <input type="text" name="book[publisher]" value="<%= info.publisher %>" class="form-control">
                </div>
                <div class="form-group">
                    <label class="label">Image</label>
                    <input type="text" name="book[image]" value="<%= info.image %>" class="form-control">
                </div>
                <div class="form-group">
                    <label class="label">Description</label>
                       <textarea  name="book[description]" cols="30" rows="5" class="form-control"><%- info.description %></textarea>
                </div>
               
                <div class="pb-3">
                    <input type="submit" value="Submit" class="btn btn-md btn-danger btn-block">
                </div>
            </form>
        </div>
        <div class="col-lg-2 col-sm-1"></div>
    </div>
</div>

<%- include('../partials/footer.ejs'); %>