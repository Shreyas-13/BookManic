<%- include('../partials/header.ejs'); %>

<h1 class="display-4 text-center" id="title">Add New Book To Collection</h1>
<hr>
<div class="container">
    <div class="row">
        <div class="col-lg-2 col-sm-1"></div>
        <div class="col-lg-8 col-sm-10">
            <form action="/books" method="POST">
                <div class="form-group">
                <label class="label">Title</label>
                    <input type="text" name="book[title]" placeholder="Title" class="form-control">
                </div>
                <div class="form-group">
                  <label class="label">Author</label>
                    <input type="text" name="book[author]" placeholder="Author" class="form-control">
                </div>
                <div class="form-group">
                    <label class="label">Publisher</label>
                    <input type="text" name="book[publisher]" placeholder="Publisher" class="form-control">
                </div>
                <div class="form-group">
                    <label class="label">Image</label>
                    <input type="text" name="book[image]" placeholder="Image Url" class="form-control">
                </div>
                <div class="form-group">
                    <label class="label">Description</label>
                       <textarea  name="book[description]" cols="30" rows="5" class="form-control"></textarea>
                </div>
               
                <div class="pb-3">
                    <input type="submit" value="Submit" class="btn btn-md btn-danger btn-block">
                </div>
            </form>
        </div>
        <div class="col-lg-2 col-sm-1"></div>
    </div>
</div>

<%- include('../partials/footer.ejs'); %>